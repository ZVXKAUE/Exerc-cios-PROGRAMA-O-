#include <iostream>
#include <cmath>  
using namespace std;

int main() {
    double numero, base;

   
    cout << "Digite o número: ";
    cin >> numero;

    cout << "Digite a base do logaritmo: ";
    cin >> base;

    
    if (numero <= 0 || base <= 1) {
        cout << "Erro: O número deve ser maior que 0 e a base deve ser maior que 1." << endl;
    } else {
       
        double logaritmo = log(numero) / log(base);

       
        cout << "O logaritmo de " << numero << " na base " << base << " é: " << logaritmo << endl;
    }

    return 0;
}
