#include <iostream>
using namespace std;

int main() {
    double deposito, taxa, rendimento, valorTotal;

    cout << "Digite o valor do depósito: R$ ";
    cin >> deposito;

    cout << "Digite a taxa de juros (%): ";
    cin >> taxa;

    rendimento = deposito * (taxa / 100);

    valorTotal = deposito + rendimento;

    cout << "O rendimento é: R$ " << rendimento << endl;
    cout << "O valor total (depositado + rendimento) é: R$ " << valorTotal << endl;

    return 0;
}
